<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.Course_tea_infoFragment">
<!--
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/fragment_courseinfo_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@color/greenLight">

                    <ImageView
                        android:id="@+id/course_info_avatar"
                        android:layout_width="96dp"
                        android:layout_height="97dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/head"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="-30dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/style_ellipse_long_info"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="课程名称："
                            android:textColor="@color/black"
                            android:textSize="@dimen/fontSize_2" />

                        <TextView
                            android:id="@+id/course_info_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:paddingStart="10dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="5dp"
                            android:paddingBottom="5dp"
                            android:text="赵大帅"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fontSize_2" />

                    </LinearLayout>

                    <View style="@style/Dividing_Line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="课  程  码： "
                            android:textColor="@color/black"
                            android:textSize="@dimen/fontSize_2" />

                        <TextView
                            android:id="@+id/course_info_code"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:paddingStart="10dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="5dp"
                            android:paddingBottom="5dp"
                            android:text="赵大帅"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fontSize_2" />

                    </LinearLayout>

                    <View style="@style/Dividing_Line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="授课教师："
                            android:textColor="@color/black"
                            android:textSize="@dimen/fontSize_2" />

                        <TextView
                            android:id="@+id/course_info_teacher_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:paddingStart="10dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="5dp"
                            android:paddingBottom="5dp"
                            android:text="赵大帅"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fontSize_2" />

                    </LinearLayout>

                    <View style="@style/Dividing_Line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="手  机  号： "
                            android:textColor="@color/black"
                            android:textSize="@dimen/fontSize_2" />

                        <TextView
                            android:id="@+id/course_info_teacher_phone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:paddingStart="10dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="5dp"
                            android:paddingBottom="5dp"
                            android:text="赵大帅"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fontSize_2" />

                    </LinearLayout>

                    <View style="@style/Dividing_Line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="生         日： "
                            android:textColor="@color/black"
                            android:textSize="@dimen/fontSize_2" />

                        <TextView
                            android:id="@+id/course_info_teacher_birthday"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:paddingStart="10dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="5dp"
                            android:paddingBottom="5dp"
                            android:text="赵大帅"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fontSize_2" />

                    </LinearLayout>

                    <View style="@style/Dividing_Line" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="10dp"
                        android:text="课程简介："
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontSize_2" />

                    <TextView
                        android:id="@+id/course_info_introduce"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/style_ellipse_long_message"
                        android:gravity="start"
                        android:letterSpacing="0.1"
                        android:maxHeight="150dp"
                        android:maxLength="100"
                        android:minLines="3"
                        android:paddingStart="20dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="5dp"
                        android:text="有字"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontSize_1" />

                </LinearLayout>

                <Button
                    android:id="@+id/course_info_modify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/yellow"
                    android:letterSpacing="0.1"
                    android:text="修改该课程"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fontSize_2" />

                <Button
                    android:id="@+id/course_info_del"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/yellow"
                    android:letterSpacing="0.1"
                    android:text="删除该课程"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fontSize_2" />

            </LinearLayout>

        </ScrollView>

</LinearLayout>